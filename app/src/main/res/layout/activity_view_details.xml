<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    app:cardBackgroundColor="@color/cardbackground"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/fab_margin"
    tools:context=".ViewDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="106dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="106dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="242dp"
                android:layout_height="170dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/jf" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:text="Jollof Rice"
                        android:textColor="@color/textColor"
                        tools:layout_editor_absoluteX="73dp"
                        tools:layout_editor_absoluteY="196dp" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2000"
                        android:textColor="@color/textColor"
                        tools:layout_editor_absoluteX="271dp"
                        tools:layout_editor_absoluteY="271dp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/m_bottom"
                    android:text="Egg's place"
                    android:textColor="@color/textColor"
                    tools:layout_editor_absoluteX="67dp"
                    tools:layout_editor_absoluteY="271dp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/m_bottom"
                    android:text="3, Ado-Ekiti, Ekiti"
                    android:textColor="@color/textColor"
                    tools:layout_editor_absoluteX="73dp"
                    tools:layout_editor_absoluteY="155dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Contact"
                        android:textColor="@color/textColor"
                        tools:layout_editor_absoluteX="73dp"
                        tools:layout_editor_absoluteY="315dp" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="081777654"
                        android:textColor="@color/textColor"
                        tools:layout_editor_absoluteX="269dp"
                        tools:layout_editor_absoluteY="155dp" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/button6"
                android:layout_width="174dp"
                android:layout_height="47dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/button_background"
                android:text="View Location"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <Button
                android:id="@+id/button7"
                android:layout_width="174dp"
                android:layout_height="47dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/button_background"
                android:text="Add To Cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button6" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.cardview.widget.CardView>